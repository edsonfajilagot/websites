BEGIN {
       print "---------------------------"
       print "Bill for the 4-March-2001. "
       print "By Vivek G Gite.           "
       print "---------------------------"
       }
{
    total = $3 * $4
    recno = $1
    item = $2
    gtotal += total
    print recno item " Rs." total
}

END {
     print "---------------------------"
     print "Total Rs." gtotal
     print "==========================="
}
